{
    "compilerOptions": {
        "lib": ["ESNext"],
        "strictNullChecks": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "es6",
        "skipLibCheck": true,
        "allowJs": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": ["node_modules", "lib", "es", "dist", "scripts"]
}
