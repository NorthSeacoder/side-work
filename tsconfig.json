{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "common": ["packages/common"],
            "@nsea": ["nsea"],
        },
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "strictNullChecks": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "es6",
        "skipLibCheck": true,
        "allowJs": true
    },
    "ts-node": {
        "esm": true
    },
    "exclude": ["node_modules", "lib", "es", "dist", "v2-doc", "scripts", "**/__tests__/**/*"]
}
